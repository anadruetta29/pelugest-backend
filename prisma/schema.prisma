generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Role {
    id    String @id @default(uuid())
    name  String @unique
	users User[] 
}

model RecordStatus {
    id    String @id @default(uuid())
    name  String @unique
    users User[]
}

model User {
    id               String @id @default(uuid())
    name             String
    lastname         String
    email            String @unique
    password         String
    id_rol           String
    id_record_status String   

    role   Role         @relation(fields: [id_rol], references: [id])
    status RecordStatus @relation(fields: [id_record_status], references: [id])
}

